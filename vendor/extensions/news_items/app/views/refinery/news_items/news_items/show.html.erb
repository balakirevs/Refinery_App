<% content_for :body do %> 
  <h1>
      <%=raw @news_item.name %>
    </h1>
    <p>
      <%=raw @news_item.news_date %>
    </p>
<hr size=1> 
      <%= image_fu @news_item.photo, "100x100", class: "style"  %>
   
  <section>
    <p>
      <%=raw @news_item.description %>
    </p>
  </section>  
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('Другие новости') %></h2>
    <ul id="news_items">
      <% @news_items.each do |news_item| %>
        <li>
          <%= link_to news_item.name, refinery.news_items_news_item_path(news_item) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %> 

<%= render '/refinery/content_page' %>
