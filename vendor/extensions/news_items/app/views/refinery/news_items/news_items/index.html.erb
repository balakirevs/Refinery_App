<% content_for :body do %>
  <ul id="news">
    <% @news_items.each do |news_item| %>
      <li>
        <%= link_to news_item.name, refinery.news_items_news_item_path(news_item) %>
      </li>
      <%= link_to image_tag(news_item.photo.thumbnail("70x70#c").url), news_item.photo.thumbnail("30x30").url %>
      
    <% end %>
  </ul>
<% end %>

<%= render '/refinery/content_page' %>
